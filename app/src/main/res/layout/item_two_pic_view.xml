<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/base10pt"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base20pt"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:id="@+id/item_two_center"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:layout_gravity="center"
            android:layout_margin="@dimen/base4pt">

            <TextView
                android:id="@+id/item_basic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_basic_title"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_two_im1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/base200pt"
                    android:layout_margin="@dimen/base2pt"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/item_two_im2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/base200pt"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/base2pt"
                    android:scaleType="centerCrop" />


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_two_center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/base2pt"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_basic_autherhead"
                android:layout_width="@dimen/base40pt"
                android:layout_height="@dimen/base40pt"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/item_basic_authername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base10pt"
                android:layout_marginRight="@dimen/base10pt"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_basic_commontnubmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base10pt"
                android:layout_marginRight="@dimen/base10pt"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_basic_publicdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base10pt"
                android:layout_marginRight="@dimen/base10pt"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>