<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/leftback_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:cUseRipple="true"
                stv:sLeftTextString="帐号管理"
                stv:sRightIconRes="@mipmap/jinru" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:sLeftTextString="通知设置"
                stv:cUseRipple="true"
                stv:sRightIconRes="@mipmap/jinru" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:cUseRipple="true"
                stv:sLeftTextString="隐私与安全"
                stv:sRightIconRes="@mipmap/jinru" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="设置中心"
                stv:cUseRipple="true"
                stv:sRightIconRes="@mipmap/jinru" />

            <com.allen.library.CommonTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:cLeftTextString="  清除缓存"
                stv:cRightIconResForDrawableRight="@mipmap/jinru"
                stv:cRightTextColor="@color/colorAccent"
                stv:cRightTextString="20.5M"
                android:layout_marginTop="20dp"
                stv:cShowDividerLineType="both"
                stv:cUseRipple="true" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:cUseRipple="true"
                stv:sLeftTextString="意见反馈"
                stv:sRightIconRes="@mipmap/jinru" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="关于"
                stv:cUseRipple="true"
                stv:sRightIconRes="@mipmap/jinru" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>