<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_smallpic_center"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/item_smallpic_rightpic"
            android:layout_width="@dimen/base120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/shouyetu" />

        <TextView
            android:id="@+id/item_basic_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/item_smallpic_rightpic"
            android:gravity="center"
            android:textColor="@color/txt_color" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_smallpic_center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_basic_autherhead"
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base30dp" />

        <TextView
            android:id="@+id/item_basic_authername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_marginRight="@dimen/base5dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_basic_commontnubmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_marginRight="@dimen/base5dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_basic_publicdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base5dp"
            android:layout_marginRight="@dimen/base5dp"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>